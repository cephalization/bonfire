{
  "name": "bonfire",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "turbo run typecheck",
    "dev": "mprocs",
    "test:int": "docker compose -f docker/docker-compose.test.yml run --build --rm test-integration",
    "test:e2e": "docker compose -f docker/docker-compose.test.yml run --build --rm test-e2e",
    "test:all": "turbo run test && pnpm run test:int",
    "prepare": "husky"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mprocs": "^0.8.3",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.0"
  },
  "overrides": {},
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix",
      "oxfmt --write"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt --write"
    ]
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "better-sqlite3"
    ]
  }
}
