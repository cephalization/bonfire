{
  "name": "@bonfire/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --target node24 --out-dir dist --sourcemap --clean",
    "migrate": "tsx migrate.ts",
    "start": "node dist/index.js",
    "test": "vitest run --config vitest.config.ts",
    "lint": "oxlint src",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@hono/zod-openapi": "^1.2.0",
    "better-auth": "^1.4.18",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "ssh2": "^1.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.6.0",
    "@types/ssh2": "^1.15.5",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "vitest": "^3.2.0"
  }
}
